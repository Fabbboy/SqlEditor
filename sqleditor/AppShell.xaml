<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="sqleditor.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:sqleditor"
    Shell.FlyoutBehavior="Disabled"
    Title="sqleditor">

    <ShellContent
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        ContentTemplate="{DataTemplate local:Views.MainEditor}"
        Route="Editor" />

    <ShellContent
        ContentTemplate="{DataTemplate local:Views.FAQPage}"
        Route="FAQ"
        />

    <ShellContent 
        ContentTemplate="{DataTemplate local:Views.Imprint}"
        Route="Imprint"
        />

</Shell>
