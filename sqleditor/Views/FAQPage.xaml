<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="sqleditor.Views.FAQPage"
             BackgroundColor="{StaticResource TailwindNeutral900}"
             xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons">

    <Grid Padding="30"
          RowDefinitions="Auto,*">

        <!-- Header and Back Button -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,20">
            <ImageButton
                Grid.Column="0"
                Source="{mi:Material Icon=ArrowBack, IconSize=24}"
                BackgroundColor="{StaticResource TailwindNeutral700}"
                WidthRequest="40"
                HeightRequest="40"
                Clicked="OnBackButtonClicked"
                CornerRadius="8"
                Margin="0,0,16,0" />

            <Label Grid.Column="1"
                   Text="Haeufig gestellte Fragen"
                   TextColor="{StaticResource TailwindNeutral100}"
                   FontSize="24"
                   FontAttributes="Bold"
                   VerticalOptions="Center" />
        </Grid>

        <!-- FAQ Content -->
        <Frame Grid.Row="1"
               CornerRadius="10"
               BackgroundColor="{StaticResource TailwindNeutral800}"
               HasShadow="False"
               Padding="20">
            <ScrollView>
                <StackLayout Spacing="20">
                    <VerticalStackLayout Spacing="8">
                        <Label Text="Ich kann meine Datei nicht finden. Was kann ich tun?"
                               TextColor="{StaticResource TailwindNeutral100}"
                               FontSize="18"
                               FontAttributes="Bold" />
                        <Label Text="Bitte ueberpruefen Sie, ob Ihre Datei mit der Endung .sqlite oder .db gespeichert wurde und der Dateipfad korrekt angegeben ist."
                               TextColor="{StaticResource TailwindNeutral300}"
                               FontSize="14" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Was sind die Standard-Anmeldeinformationen?"
                               TextColor="{StaticResource TailwindNeutral100}"
                               FontSize="18"
                               FontAttributes="Bold" />
                        <Label Text="Falls die Datenbank noch keine __sqleditor Tabelle enthaelt, sind die Standardzugangsdaten: Benutzername: admin, Passwort: admin"
                               TextColor="{StaticResource TailwindNeutral300}"
                               FontSize="14" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Kann ich eine Kopie der Datenbank herunterladen?"
                               TextColor="{StaticResource TailwindNeutral100}"
                               FontSize="18"
                               FontAttributes="Bold" />
                        <Label Text="Ja, klicken Sie dazu auf den Download-Button im Editor, um eine Kopie Ihrer Datenbank herunterzuladen."
                               TextColor="{StaticResource TailwindNeutral300}"
                               FontSize="14" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="8">
                        <Label Text="Ich habe versehentlich die __sqleditor Tabelle geloescht. Was nun?"
                               TextColor="{StaticResource TailwindNeutral100}"
                               FontSize="18"
                               FontAttributes="Bold" />
                        <Label Text="Keine Sorge, Ihre Daten sind sicher. Der Editor wird automatisch einen neuen Standardbenutzer erstellen."
                               TextColor="{StaticResource TailwindNeutral300}"
                               FontSize="14" />
                    </VerticalStackLayout>
                </StackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>